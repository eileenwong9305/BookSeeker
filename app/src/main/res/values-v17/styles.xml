<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SingleListTitleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/list_title_text_size</item>
        <item name="android:layout_marginStart">@dimen/margin_horizontal_16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SingleListTextStyle">
        <item name="android:layout_marginStart">@dimen/margin_horizontal_16dp</item>
        <item name="android:textSize">@dimen/item_text_size</item>
    </style>

    <style name="MainTitleTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/main_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorTextStyle">
        <item name="android:layout_margin">@dimen/margin_vertical_16dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:visibility">gone</item>
    </style>
</resources>